<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ParallelQueryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="executeParallelQueriesButton" text="Run Parallel Queries" />
        <Button fx:id="compareRedWhiteButton" text="Compare Red and White Wines" />
        <Button fx:id="backButton" text="Back" />
    </HBox>

    <Label fx:id="statusLabel" text="Ready to execute queries" />

    <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="wineNumberColumn" text="Wine Number" prefWidth="100.0" />
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100.0" />
            <TableColumn fx:id="colorColumn" text="Color" prefWidth="80.0" />
            <TableColumn fx:id="qualityColumn" text="Quality" prefWidth="80.0" />
            <TableColumn fx:id="alcoholColumn" text="Alcohol" prefWidth="80.0" />
            <TableColumn fx:id="pHColumn" text="pH" prefWidth="80.0" />
        </columns>
    </TableView>
</VBox>