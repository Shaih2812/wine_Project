<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="640.0" prefWidth="362.0" spacing="10" style="-fx-background-image: url('KatzrinBottle.jpg');
            -fx-background-size: auto;
            -fx-background-repeat: no-repeat;
            -fx-background-position: center;
            -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="WineFilterMenuController">
    <!-- Filter buttons -->
    <Button fx:id="colorFilterButton" text="Filter by Color" />
    <Button fx:id="qualityFilterButton" text="Filter by Quality" />
    <Button fx:id="alcoholLevelFilterButton" text="Filter by Alcohol Levels" />
    <Button fx:id="phLevelFilterButton" text="Filter by pH Level" />
    <Button fx:id="fixedAcidityFilterButton" text="Filter by Fixed Acidity" />
    <Button fx:id="volatileAcidityFilterButton" text="Filter by Volatile Acidity" />
    <Button fx:id="residualSugarFilterButton" text="Filter by Residual Sugar" />
    <Button fx:id="citricAcidFilterButton" text="Filter by Citric Acid" />
    <Button fx:id="freeSulfurDioxideFilterButton" text="Filter by Free Sulfur Dioxide" />
    <Button fx:id="totalSulfurDioxideFilterButton" text="Filter by Total Sulfur Dioxide" />
    <Button fx:id="densityFilterButton" text="Filter by Density" />
    <Button fx:id="sulphatesFilterButton" text="Filter by Sulphates" />
    <Button fx:id="chloridesFilterButton" text="Filter by Chlorides" />

    <!-- Apply Filters Button -->
    <Button fx:id="applyFiltersButton" text="Apply Filters" />

    <!-- Reset Filters Button -->
    <Button fx:id="resetFiltersButton" text="Reset Filters" />

    <!-- Back to Main Menu Button -->
    <Button fx:id="backToMainMenuButton" text="Back to Main Menu" />
</VBox>
